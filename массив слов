using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace массив_слов
{
    class Program
    {
        static void Main(string[] args)
        {
            char space = ' ';
            char comma = ',';
            string sourseLine = "Наша онлаин школа ЯЮниор является лучшей в России";
            string[] arrayOfWords = sourseLine.Split(space,comma) ;

            Console.WriteLine(sourseLine);
            Console.ReadKey();

            for (int i = 0; i < arrayOfWords.Length; i++)
            {
                Console.WriteLine(arrayOfWords[i]);
            }
        }
    }
}
